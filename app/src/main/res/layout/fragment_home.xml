<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Home">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Hiii,"
                android:id="@+id/wish"
                android:textSize="25dp"
                android:fontFamily="@font/fontt"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=" Chinmaya ðŸ˜Š"
                android:text="Chinmaya ðŸ˜Š"
                android:fontFamily="@font/fontt"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
           <androidx.cardview.widget.CardView
               android:id="@+id/card_clicn"
               android:layout_margin="15dp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:background="@drawable/btn_home_solid"

               android:layout_height="150dp"
               android:elevation="40dp">
               <LinearLayout
                   android:foreground="?attr/selectableItemBackground"
                   android:id="@+id/ll_clicn"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:background="@drawable/btn_home_solid"

                   >
                   <LinearLayout
                       android:layout_marginTop="10dp"
                       android:padding="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       android:background="@drawable/circular_round">
                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="0dp"
                           android:layout_weight="1"
                           android:padding="5dp"
                           android:background="@drawable/baseline_local_hospital_24"
                           />


                   </LinearLayout>
                   <TextView
                       android:layout_width="50dp"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       android:padding="5dp"
                       android:text="Clinc Visit"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:textSize="15dp"
                       android:gravity="center"
                       />



               </LinearLayout>
           </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="150dp"
                android:elevation="10dp">
                <LinearLayout
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/btn_home">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/circular_round">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:background="@drawable/ic_home"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Home Visit"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:gravity="center"
                        />



                </LinearLayout>
           </androidx.cardview.widget.CardView>
        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:color="#1FFFFFFF"

            android:background="?android:attr/dividerVertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontt"
            android:text="Disease Detection"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            tools:listitem="@layout/list_diease"
            android:orientation="horizontal"
            android:id="@+id/recylerView"/>
        <TextView
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontt"
            android:text="Available Doctors"/>

        <GridView
            android:id="@+id/idGVdoctor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:horizontalSpacing="6dp"
            android:numColumns="2"
            android:verticalSpacing="6dp"
            tools:listitem="@layout/grid_items" />

    </LinearLayout>
